{% embed '/wrapper/_layout' with {
  critical: entry.type.handle ~ '.css'|default('homepage.css')
} %}

{% set data = fetchData(url('api/pages/homepage')) %}

{% block content %}

{# Hero 
	title [plain text]
	intro [plain text]
#}
{% include '/components/_hero.twig' with {
	title: null,
	intro: data.intro,
	modifier: 'full',
	scrollTarget: '#company-intro'
} %}

{# CompanyIntro 
	companiesIntro [plain text]
	companiesLinks [object]
		companyLogo [svg]
		companyLink [link]
#}
{% include '/components/_companies-intro' with {
	companiesIntro: data.companiesIntro,
	companiesLinks: data.companiesLinks
} %}

{# GroupFactors 
	groupFactorsIntro [plain text]
	groupFactors [object]
		factorTitle [plain text]
		factorDescription [plain text]
#}
{% include '/components/_group-factors' with {
	groupFactorsIntro: data.groupFactorsIntro,
	groupFactors: data.groupFactors
} %}


{% include '/components/_mega-link' with {
	megaLink: data.featuredLink,
	backgroundColor: 'grey'
} %}

{# <pre>{{ dump(data) }}</pre> #}
{% endblock %}
{% endembed %}
